#include<iostream>
using namespace std;

int main()
{
    string name,course;
	int age;
	
//  Pointer variables
	int *pAge;
	pAge = &age;

	string *pName;
	pName = &name;
	
	string *pCourse;
	pCourse = &course;
	  
    cout << "Enter name: "; 
    getline(cin, name); 
	 
    cout << "Enter age: ";
    cin >> age;
    fflush(stdin);
    
    cout << "Enter course: ";
    getline(cin, course);
   
    cout << *pName << "," << " a " << *pCourse;
    cout<< " student is " << *pAge;
    cout<<"years old"; 
  
    return 0; 
}
